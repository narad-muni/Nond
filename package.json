{
  "name": "Nond",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "setup": "npm install && cd ui && npm install",
    "dev": "node -e \"require('fs-extra').emptyDir('public/build');\" && concurrently \"cd ui && npx vite\" \"node ace serve --watch\"",
    "dev-be": "node ace serve --watch",
    "dev-fe": "node -e \"require('fs-extra').emptyDir('public/build');\" && cd ui && npx vite",
    "build": "node -e \"require('fs-extra').emptyDir('public/build');\" && cd ui && npx vite build && cd .. && node ace build --production --ignore-ts-errors && cp .env build/.env",
    "start": "node server.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.5",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.2.2",
    "@types/proxy-addr": "^2.0.0",
    "@types/source-map-support": "^0.5.6",
    "adonis-preset-ts": "^2.1.0",
    "pino-pretty": "^9.1.1",
    "typescript": "~4.6",
    "youch": "^3.2.2",
    "youch-terminal": "^2.1.5"
  },
  "dependencies": {
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/lucid": "^18.3.0",
    "@adonisjs/repl": "^3.1.11",
    "@adonisjs/session": "^6.4.0",
    "@adonisjs/shield": "^7.1.0",
    "@adonisjs/view": "^6.2.0",
    "concurrently": "^7.6.0",
    "crypto": "^1.0.1",
    "fast-folder-size": "^1.7.1",
    "joi": "^17.7.0",
    "luxon": "^3.2.1",
    "pg": "^8.9.0",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21"
  }
}
